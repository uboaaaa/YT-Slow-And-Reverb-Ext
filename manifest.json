{
  "manifest_version": 2,
  "name": "YouTube Slow and Reverb Controls",
  "version": "1.0",
  "description": "A small, no-nonsense extension to control speed and reverb settings on YouTube videos.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
